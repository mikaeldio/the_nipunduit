<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/ProfilePic"
        android:layout_width="185dp"
        android:layout_height="164dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/ic_profile" />

    <TextView
        android:id="@+id/mNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProfilePic"
        android:layout_centerHorizontal="true"
        android:text="Selamat datang, John"
        android:textColor="#f1f1f1"/>

    <Button
        android:id="@+id/mTambah"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="116dp"
        android:layout_marginStart="29dp"
        android:background="#ffbb00"
        android:text="Tambah Pengeluaran"
        android:textColor="#f1f1f1" />

    <Button
        android:id="@+id/mJamMakan"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mTambah"
        android:layout_marginStart="-9dp"
        android:layout_toEndOf="@+id/mNama"
        android:background="#ffbb00"
        android:text="ATUR JAM MAKAN"
        android:textColor="#f1f1f1" />

    <Button
        android:id="@+id/mTampil"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mTambah"
        android:layout_centerHorizontal="true"
        android:background="#ffbb00"
        android:text="Tampil Pengeluaran"
        android:textColor="#f1f1f1" />

    <TextView
        android:id="@+id/text_sisaBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="45dp"
        android:text="Sisa Budget Bulan Ini"
        android:textColor="#f1f1f1"/>

    <TextView
        android:id="@+id/text_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_sisaBudget"
        android:layout_below="@+id/text_sisaBudget"
        android:text="Target Tabungan"
        android:textColor="#f1f1f1"/>

    <TextView
        android:id="@+id/mBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ProfilePic"
        android:layout_alignTop="@+id/textView2"
        android:text="-"
        android:textColor="#f1f1f1"/>

    <TextView
        android:id="@+id/mSBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ProfilePic"
        android:layout_alignTop="@+id/text_sisaBudget"
        android:text="-"
        android:textColor="#f1f1f1"/>

    <TextView
        android:id="@+id/mTT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ProfilePic"
        android:layout_alignTop="@+id/text_target"
        android:text="-"
        android:textColor="#f1f1f1"/>

    <Button
        android:id="@+id/mKeluar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="59dp"
        android:layout_toStartOf="@+id/mBB"
        android:background="#ff0004"
        android:text="Keluar"
        android:textColor="#f1f1f1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_sisaBudget"
        android:layout_alignStart="@+id/text_sisaBudget"
        android:text="Budget Bulan ini"
        android:textColor="#f1f1f1"/>

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/mKeluar"
        android:layout_marginStart="93dp"
        android:background="#ffbb00"
        android:text="EDIT AKUN"
        android:textColor="#f1f1f1" />

</RelativeLayout>