<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".InfoKeuangan">

    <Button
        android:id="@+id/mBatal"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mPendapatan"
        android:layout_marginBottom="80dp"
        android:background="#ff0000"
        android:text="BATAL"
        android:textColor="#f1f1f1" />

    <EditText
        android:id="@+id/mPendapatan"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textJudul"
        android:layout_marginTop="163dp"
        android:ems="10"
        android:hint="budgetBulanan"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Informasi Keuangan"
        android:textSize="30sp"
        android:textColor="#f1f1f1"/>

    <TextView
        android:id="@+id/textBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mPendapatan"
        android:layout_alignStart="@+id/mPendapatan"
        android:layout_marginBottom="-163dp"
        android:text="Jumlah Pendapatan/Budget"
        android:textColor="#f1f1f1"/>

    <TextView
        android:id="@+id/textFrekuensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textJudul"
        android:layout_marginTop="221dp"
        android:text="Frekuensi Menabung"
        android:textColor="#f1f1f1"/>

    <TextView
        android:id="@+id/textTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mPendapatan"
        android:layout_marginBottom="197dp"
        android:text="Target uang yang ditabung"
        android:textColor="#f1f1f1"/>

    <EditText
        android:id="@+id/mTarget"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mPendapatan"
        android:layout_below="@+id/textTarget"
        android:layout_marginTop="-197dp"
        android:ems="10"
        android:hint="targetBulanan"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/spinnerFrekuensi"
        android:layout_width="267dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/mPendapatan"
        android:layout_below="@+id/textFrekuensi"
        android:entries="@array/frekuensi_menabung"
        android:textColor="#f1f1f1" />

    <Button
        android:id="@+id/mDone"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mPendapatan"
        android:layout_alignTop="@+id/mBatal"
        android:background="#ff6600"
        android:text="DONE"
        android:textColor="#f1f1f1" />

</RelativeLayout>