<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button android:textColor="#f1f1f1" android:id="@+id/mBatal" android:background="#ff0000" android:layout_width="89dp" android:layout_height="wrap_content" android:layout_marginBottom="80dp" android:text="BATAL" android:layout_alignParentBottom="true" android:layout_alignStart="@+id/mPendapatan"/>
    <EditText android:id="@+id/mPendapatan" android:layout_width="268dp" android:layout_height="wrap_content" android:layout_marginTop="163dp" android:hint="budgetBulanan" android:ems="10" android:layout_alignParentTop="true" android:inputType="numberDecimal" android:layout_alignStart="@+id/textJudul"/>
    <TextView android:textSize="30sp" android:textColor="#f1f1f1" android:id="@+id/textJudul" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="75dp" android:text="Informasi Keuangan" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView android:textColor="#f1f1f1" android:id="@+id/textBudget" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="-163dp" android:text="Jumlah Pendapatan/Budget" android:layout_above="@+id/mPendapatan" android:layout_alignStart="@+id/mPendapatan"/>
    <TextView android:textColor="#f1f1f1" android:id="@+id/textFrekuensi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="221dp" android:text="Frekuensi Menabung" android:layout_alignParentTop="true" android:layout_alignStart="@+id/textJudul"/>
    <TextView android:textColor="#f1f1f1" android:id="@+id/textTarget" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="197dp" android:text="Target uang yang ditabung" android:layout_alignParentBottom="true" android:layout_alignStart="@+id/mPendapatan"/>
    <EditText android:id="@+id/mTarget" android:layout_width="267dp" android:layout_height="wrap_content" android:layout_marginTop="-197dp" android:hint="targetBulanan" android:ems="10" android:layout_below="@+id/textTarget" android:inputType="numberDecimal" android:layout_alignStart="@+id/mPendapatan"/>
    <Spinner android:textColor="#f1f1f1" android:entries="@array/frekuensi_menabung" android:id="@+id/spinnerFrekuensi" android:layout_width="267dp" android:layout_height="46dp" android:layout_below="@+id/textFrekuensi" android:layout_alignStart="@+id/mPendapatan"/>
    <Button android:textColor="#f1f1f1" android:id="@+id/mDone" android:background="#ff6600" android:layout_width="93dp" android:layout_height="wrap_content" android:text="DONE" android:layout_alignTop="@+id/mBatal" android:layout_alignEnd="@+id/mPendapatan"/>
</RelativeLayout>
