<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="25sp" android:id="@+id/textView7" android:layout_width="317dp" android:layout_height="wrap_content" android:layout_marginTop="28dp" android:text="Tambahan Pengeluaran" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:textAlignment="center"/>
    <TextView android:textSize="15sp" android:id="@+id/textView8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="101dp" android:text="Keterangan" android:layout_alignParentTop="true" android:layout_alignStart="@+id/mKeterangan"/>
    <EditText android:id="@+id/mKeterangan" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="132dp" android:hint="Keterangan" android:ems="10" android:layout_alignParentTop="true" android:inputType="textPersonName" android:layout_marginStart="69dp" android:layout_alignParentStart="true"/>
    <TextView android:textSize="15sp" android:id="@+id/textView9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="194dp" android:text="Jumlah" android:layout_alignParentTop="true" android:layout_alignStart="@+id/textView8"/>
    <EditText android:id="@+id/mJumlah" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="228dp" android:hint="Masukkan Nominal" android:ems="10" android:layout_alignParentTop="true" android:inputType="number" android:layout_alignStart="@+id/textView8"/>
    <Button android:id="@+id/mTambah" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="199dp" android:text="Tambah" android:layout_alignParentBottom="true" android:layout_alignEnd="@+id/mKeterangan"/>
    <Button android:id="@+id/mBatal" android:layout_width="73dp" android:layout_height="wrap_content" android:text="Batal" android:layout_alignTop="@+id/mTambah" android:layout_alignStart="@+id/textView8"/>
</RelativeLayout>
