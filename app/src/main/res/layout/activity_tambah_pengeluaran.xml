<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".TambahPengeluaran">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Tambahan Pengeluaran"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/mKeterangan"
        android:layout_marginTop="101dp"
        android:text="Keterangan"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/mKeterangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="Keterangan"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="194dp"
        android:text="Jumlah"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/mJumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="228dp"
        android:ems="10"
        android:hint="Masukkan Nominal"
        android:inputType="number" />

    <Button
        android:id="@+id/mTambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mKeterangan"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="199dp"
        android:text="Tambah" />

    <Button
        android:id="@+id/mBatal"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/mTambah"
        android:text="Batal" />
</RelativeLayout>